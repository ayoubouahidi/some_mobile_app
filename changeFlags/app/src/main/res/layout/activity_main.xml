<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choissir votre pays"
        android:textColor="#FF0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094" />


    <RadioGroup
        android:id="@+id/btn1"
        android:layout_width="357dp"
        android:layout_height="245dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343">

        <RadioButton
            android:id="@+id/Tmaroc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maroc" />

        <RadioButton
            android:id="@+id/Tfrance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" France (7achak)" />

        <RadioButton
            android:id="@+id/Tcanada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canada" />

        <RadioButton
            android:id="@+id/Tjapan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Japon" />
    </RadioGroup>

    <ImageView
        android:id="@+id/maroc"
        android:layout_width="226dp"
        android:layout_height="145dp"
        android:src="@drawable/maroc"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.66" />
    <ImageView
        android:id="@+id/japan"
        android:layout_width="226dp"
        android:layout_height="145dp"
        android:src="@drawable/japan"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.66" />
    <ImageView
        android:id="@+id/france"
        android:layout_width="226dp"
        android:layout_height="145dp"
        android:src="@drawable/fr"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.66" />
    <ImageView
        android:id="@+id/canada"
        android:layout_width="226dp"
        android:layout_height="145dp"
        android:src="@drawable/ca"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintVertical_bias="0.66" />


</androidx.constraintlayout.widget.ConstraintLayout>